# ===========================================
# Orbis v2.0 - Environment Configuration
# ===========================================
# Copy this file to .env and fill with your values

# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=development
DEBUG=true

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Orbis API
API_VERSION=2.0.0
ORBIS_BASE_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=sqlite:///./data/orbis.db
ORBIS_DB_PATH=data/orbis.db

# ===========================================
# SECURITY - REQUIRED!
# ===========================================
# Generate secure keys with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-generate-a-secure-key
JWT_SECRET=change-me-generate-a-secure-key
ORBIS_JWT_SECRET=change-me-generate-a-secure-key
ORBIS_VOICE_KEY=change-me-generate-a-secure-key
ORBIS_DB_KEY=change-me-generate-a-secure-key

# ===========================================
# REDIS (Cache & Rate Limiting)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# ML SERVICES (Machine Learning)
# ===========================================
ASR_MODEL=openai/whisper-large-v3-turbo
ASR_DEVICE=cpu
MT_MODEL=facebook/nllb-200-distilled-600M
MT_DEVICE=cpu
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_DEVICE=cpu
COQUI_TTS_HOST=http://localhost:5002

# OpenAI (opcional - deixe vazio se n√£o usar)
OPENAI_API_KEY=

# ===========================================
# FEATURES & LIMITS
# ===========================================
MAX_ROOM_PARTICIPANTS=100
MAX_ROOM_DURATION=240
TARGET_LATENCY_MS=250
RATE_LIMIT_PER_MINUTE=100
ORBIS_RPM=180

# ===========================================
# EMAIL (Gmail SMTP)
# ===========================================
ORBIS_EMAIL_PROVIDER=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ORBIS_SMTP_HOST=smtp.gmail.com
ORBIS_SMTP_PORT=587
ORBIS_SMTP_USER=your-email@gmail.com
ORBIS_SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Orbis

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
ORBIS_LOG_SAMPLE=0.2
METRICS_ENABLED=false

# ===========================================
# ADVANCED FEATURES
# ===========================================
ORBIS_DIARIZER=vad

# ===========================================
# STORAGE
# ===========================================
STORAGE_PATH=./data
VOICES_PATH=./data/voices
UPLOADS_PATH=./data/uploads
MODELS_PATH=./data/models

# ===========================================
# OAUTH (OPTIONAL)
# ===========================================
ENABLE_OAUTH=false
FRONTEND_URL=http://localhost:3000
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# PAYMENTS (OPTIONAL)
# ===========================================
STRIPE_API_KEY=
ENABLE_PAYMENTS=false

# ===========================================
# LAZY LOADING & OPTIMIZATION
# ===========================================
ML_LAZY_LOAD=true
ML_AUTO_DETECT_HARDWARE=true
ML_AUTO_UNLOAD_ENABLED=true
ML_UNLOAD_AFTER_IDLE_SECONDS=3600
ML_CHECK_IDLE_INTERVAL_SECONDS=300
ML_FORCE_DEVICE=
ML_FORCE_WHISPER_MODEL=
ML_FORCE_NLLB_MODEL=

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AUTH=true
ENABLE_ROOMS=true
ENABLE_WEBSOCKET=true
ENABLE_VOICE_CLONING=true
ENABLE_TRANSLATION=true
ENABLE_TRANSCRIPTION=true
ENABLE_AI_ASSISTANT=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_GAMIFICATION=true
ENABLE_VOICE_MARKETPLACE=false
ENABLE_SOCIAL_NETWORKING=false
ENABLE_ENTERPRISE_FEATURES=false
ENABLE_DISASTER_RECOVERY=false
ENABLE_DATABASE_SHARDING=false
ENABLE_RECORDINGS=true
ENABLE_OAUTH=false
ENABLE_PAYMENTS=false
